#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char file[20], word[20], line[200];

    printf("Enter file name: ");
    scanf("%s", file);

    printf("Enter word to search: ");
    scanf("%s", word);

    fp = fopen(file, "r");

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, word))
            printf("%s", line);
    }

    fclose(fp);
    return 0;
}
