#include <stdio.h>
#include <dirent.h>

int main() {
    DIR *d;
    struct dirent *dir;

    d = opendir(".");
    if (!d) {
        printf("Error opening directory\n");
        return 1;
    }

    printf("Files in directory:\n");
    while ((dir = readdir(d)) != NULL) {
        printf("%s\n", dir->d_name);
    }

    closedir(d);
    return 0;
}
