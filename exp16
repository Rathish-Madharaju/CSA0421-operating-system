#include <stdio.h>

int main() {
    int blocks[10], process[10], b, p, i, j;
    int allocated[10] = {0};

    printf("Enter number of memory blocks: ");
    scanf("%d", &b);
    printf("Enter block sizes:\n");
    for(i = 0; i < b; i++) scanf("%d", &blocks[i]);

    printf("Enter number of processes: ");
    scanf("%d", &p);
    printf("Enter process sizes:\n");
    for(i = 0; i < p; i++) scanf("%d", &process[i]);

    printf("\nProcess\tSize\tBlock Allocated\n");
    for(i = 0; i < p; i++) {
        int allocatedBlock = -1;
        for(j = 0; j < b; j++) {
            if(!allocated[j] && blocks[j] >= process[i]) {
                allocatedBlock = j + 1;
                allocated[j] = 1;
                break;
            }
        }
        if(allocatedBlock != -1)
            printf("%d\t%d\tBlock %d\n", i+1, process[i], allocatedBlock);
        else
            printf("%d\t%d\tNot Allocated\n", i+1, process[i]);
    }
    return 0;
}
