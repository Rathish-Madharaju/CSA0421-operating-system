#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <string.h>
#include <unistd.h>
#include <sys/wait.h>

int main() {
    key_t key = ftok(".", 'S'); // generate key
    int shmid = shmget(key, 256, IPC_CREAT | 0666);
    char *shm = (char*) shmat(shmid, NULL, 0);

    if (fork() == 0) { // child - writer
        const char *msg = "Hello from shared memory!";
        strcpy(shm, msg);
        printf("Child wrote: %s\n", msg);
        shmdt(shm);
        return 0;
    } else { // parent - reader
        wait(NULL);
        printf("Parent reads: %s\n", shm);
        shmdt(shm);
        shmctl(shmid, IPC_RMID, NULL);
    }
    return 0;
}
