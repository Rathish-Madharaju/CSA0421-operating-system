#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd;
    struct stat st;

    fd = open("sample.txt", O_RDONLY);
    fcntl(fd, F_SETFL, O_NONBLOCK);

    lseek(fd, 0, SEEK_SET);
    stat("sample.txt", &st);

    printf("File Size: %ld bytes\n", st.st_size);

    DIR *d = opendir(".");
    struct dirent *dir;

    printf("\nDirectory Contents:\n");
    while ((dir = readdir(d)) != NULL) {
        printf("%s\n", dir->d_name);
    }

    closedir(d);
    close(fd);

    return 0;
}
